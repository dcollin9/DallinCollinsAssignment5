@{
    ViewBag.Title = "View Books";
}

<!--Brings in the project list view model for this specific view-->
@model ProjectListViewModel


@foreach (var x in Model.Projects)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                Title: @x.Title 
            </h4>
            <p class="lead">Publisher: @x.Publisher</p>
            <p><span role="button" tabindex="0">Author First Name: @x.AuthorFirstName</span></p>
            <p>Author Middle Name: @x.AuthorMiddleName</p>
            <p>Author Last Name: @x.AuthorLastName</p>
            <p>ISBN: @x.ISBN</p>
            <p>Classification: @x.Classification</p>
            <p>Category: @x.Category</p>
            <p>Price: @x.Price</p>
            <p>Number of Pages: @x.PageCount</p>
        </div>
    </div>
}


    
<!--Tells the div to go pass the PagingInfo template to the page-model-->
<div page-model="@Model.PagingInfo" page-action="Index" 
     page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" 
     class="btn-group pull-right m-1"></div>

