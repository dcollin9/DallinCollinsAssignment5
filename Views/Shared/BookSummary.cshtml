@model Project


<!--The view component that is called to build the list of books-->
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            Title: @Model.Title
        </h4>
        <p class="lead">Publisher: @Model.Publisher</p>
        <p><span role="button" tabindex="0">Author First Name: @Model.AuthorFirstName</span></p>
        <p>Author Middle Name: @Model.AuthorMiddleName</p>
        <p>Author Last Name: @Model.AuthorLastName</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Classification: @Model.Classification</p>
        <p>Category: @Model.Category</p>
        <p>Price: @Model.Price</p>
        <p>Number of Pages: @Model.PageCount</p>
    </div>

    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add to Cart
            </button>
        </span>

    </form>
</div>